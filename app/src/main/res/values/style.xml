<resources>


    <!-- Основной стиль для кнопок -->
    <style name="MainButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item> <!-- Задаем пропорциональную ширину для кнопок в GridLayout -->
        <item name="android:backgroundTint">#6EB257</item> <!-- Цвет фона кнопки -->
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста -->
        <item name="android:textSize">20sp</item> <!-- Размер шрифта -->
        <item name="android:padding">12dp</item>
        <!-- Внутренние отступы внутри кнопки -->

    </style>


    <!-- Стиль для кнопок в горизонтальной полосе индикатора -->


    <!-- Стиль для кнопок с ответами -->
    <style name="AnswerButton">
        <item name="android:layout_width">match_parent</item> <!-- Кнопки занимают всю ширину -->
        <item name="android:layout_height">wrap_content</item> <!-- Кнопка по высоте под размер текста -->
        <item name="android:backgroundTint">#CDE09B</item> <!-- Цвет фона -->
        <item name="android:textColor">#1A3D26</item> <!-- Цвет текста -->
        <item name="android:layout_marginTop">8dp</item> <!-- Отступ сверху -->
        <item name="android:padding">12dp</item> <!-- Отступы внутри кнопки -->
    </style>


    <style name="QuestionIndicatorButton" parent="Widget.AppCompat.Button">
        <!-- Размеры -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">60dp</item> <!-- Увеличил для текста -->
        <item name="android:layout_height">40dp</item> <!-- Увеличил высоту -->

        <!-- Внешний вид -->
        <item name="android:textColor">#1A3D26</item>
        <item name="android:backgroundTint">#B3D68C</item> <!-- Фиксим цвет -->
        <item name="android:background">@null</item> <!-- Важно для backgroundTint -->
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item> <!-- Добавил вертикальные отступы -->
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_margin">2dp</item>

        <!-- Отключаем Material-эффекты -->
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="cornerRadius">0dp</item>
    </style>


</resources>
