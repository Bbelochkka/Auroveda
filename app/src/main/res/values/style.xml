<resources>


    <!-- Основной стиль для кнопок -->
    <style name="MainButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item> <!-- Задаем пропорциональную ширину для кнопок в GridLayout -->
        <item name="android:backgroundTint">#6EB257</item> <!-- Цвет фона кнопки -->
        <item name="android:textColor">#FFFFFF</item> <!-- Цвет текста -->
        <item name="android:textSize">20sp</item> <!-- Размер шрифта -->
        <item name="android:padding">12dp</item>
        <!-- Внутренние отступы внутри кнопки -->

    </style>
