    <!-- Стиль для кнопок в горизонтальной полосе индикатора -->


    <style name="AnswerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#D4E6B5</item>
        <item name="android:textColor">#18774A</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="QuestionIndicatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#18774A</item>
        <item name="android:backgroundTint">#D4E6B5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    <style name="NextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#18774A</item>
        <item name="android:backgroundTint">#D4E6B5</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>



</resources>
